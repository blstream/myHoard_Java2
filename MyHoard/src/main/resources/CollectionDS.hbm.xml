<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="com.java2.model">
	<class name="CollectionDS" table="Collections">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="owner" column="owner" type="string" />
		<property name="name" type="string" />
		<property name="description" type="string" />
		<property name="tags" type="string" />
		<property name="itemsNumber" column="items_number" type="int" />
		<property name="createdDate" column="created_date" type="timestamp" />
		<property name="modifiedDate" column="modified_date" type="timestamp" />
	</class>
</hibernate-mapping>