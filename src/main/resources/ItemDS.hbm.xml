<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.blstream.myhoard.db.model">
	<class name="ItemDS" table="Item">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" column = "name" type="string" />
		<property name="description" type="string" />
		<property name="latitude" type="float" />
		<property name="longitude" type="float" />
		<set name="media" lazy="false" inverse="true">
			<key column="item" on-delete="cascade" />
			<one-to-many class="MediaDS" />
		</set>
		<property name="createdDate" column="created_date" type="timestamp" update="false" />
		<property name="modifiedDate" column="modified_date" type="timestamp" />
		<property name="collection" type="int" />
		<property name="owner" type="string" />
	</class>
</hibernate-mapping>