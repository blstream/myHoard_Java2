<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.blstream.myhoard.db.model">
	<class name="MediaDS" table="Media">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="file" column="file" type="blob" />
		<property name="createdDate" column="created_date" type="timestamp" update="false" />
		<many-to-one name="item" column="item" class="ItemDS" not-null="false" lazy="false"/>
	</class>        
</hibernate-mapping>
